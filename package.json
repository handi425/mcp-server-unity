{
  "name": "mcp-server-unity",
  "version": "1.0.0",
  "description": "Model Context Protocol server for Unity development - enables Claude to interact with Unity projects",
  "type": "module",
  "main": "build/start-http.js",
  "bin": {
    "unity-mcp-http": "./build/start-http.js",
    "mcp-server-unity": "./build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node build/index.js",
    "start:http": "node build/start-http.js",
    "clean": "rm -rf build",
    "prepare": "npm run build",
    "test": "echo 'Usage: npm run test:integration <unity-project-path>'",
    "test:integration": "npm run build && node tests/integration-test.js",
    "test:comprehensive": "npm run build && node tests/comprehensive-test.js",
    "test:manual": "./tests/run-manual-tests.sh"
  },
  "keywords": [
    "mcp",
    "mcp-server",
    "model-context-protocol",
    "unity",
    "unity3d",
    "unity-editor",
    "gamedev",
    "game-development",
    "claude",
    "ai",
    "ai-tools"
  ],
  "author": "zabaglione",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zabaglione/mcp-server-unity.git"
  },
  "bugs": {
    "url": "https://github.com/zabaglione/mcp-server-unity/issues"
  },
  "homepage": "https://github.com/zabaglione/mcp-server-unity#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "glob": "^10.3.10",
    "js-yaml": "^4.1.0",
    "ws": "^8.16.0",
    "diff": "^5.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.10",
    "@types/diff": "^5.0.9",
    "node-fetch": "^3.3.2",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
